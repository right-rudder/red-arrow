---
import ContactUs from "../../components/ContactUs.astro";
import HomeLayout from "../../layouts/HomeLayout.astro";
import ScheduleCallCTA from "../../components/ScheduleCallCTA.astro";
import FinancingTabs from "../../components/FinancingTabs";
---

<HomeLayout
  pageTitle="Financing | Red Arrow Flight Academy"
  pageDescription="Explore the financing options available to fund your flight training with Red Arrow Flight Academy. Leverage our partners to ensure finances donâ€™t become the limiting factor in your path to becoming a pilot."
  pageKeywords="Financing, loans, funding, Meritize, support, student loans"
>
  <!-- Header -->
  <header
    class="relative h-screen-3/4 bg-financing bg-cover bg-center bg-black flex flex-col items-center justify-center"
  >
    <!-- bg-overlay to darken -->
    <div class="absolute bg-black/50 w-full h-full z-0"></div>
    <!-- Text -->
    <div
      class="text-white text-center z-10 flex flex-col items-center gap-8 px-5"
    >
      <h1 class="text-5xl font-bold tracking-tight">
        How to Access Financing at Red Arrow
      </h1>
      <h2 class="text-3xl tracking-wide">
        Red Arrow has partnered with Meritize, Stratus Financial, and Flight
        Training Finance to help our students fund their pilot training
      </h2>
    </div>
  </header>

  <FinancingTabs client:load />

  <!-- Call to Action Banner -->
  <ScheduleCallCTA />

  <!-- Contact Us Form -->
  <ContactUs />
</HomeLayout>
