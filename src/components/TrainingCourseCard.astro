---
const { image, description, alt } = Astro.props;
---

<div
  class="flex bg-white text-black flex-col p-2 rounded-xl hover:scale-105 transition-[transform] duration-300 ease-in-out cursor-pointer shadow-lg"
>
  <img
    src={image.src}
    alt={alt}
    class="rounded-xl h-64 w-full object-cover"
  />
  <p class="text-xl font-medium text-center py-3">
    {description}
  </p>
</div>
