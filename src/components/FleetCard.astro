---
import { Icon } from "astro-icon/components";

const { plane } = Astro.props;

function camelCaseToTitleCase(str) {
  return str.replace(/([A-Z])/g, " $1").replace(/^./, function (str) {
    return str.toUpperCase();
  });
}
---

<div class="flex flex-col p-5 my-10 text-white">
  <img
    src={plane.image.src}
    class="aspect-square object-cover w-full bg-white"
    alt={plane.alt}
  />
  <div
    class="flex items-center gap-2 text-lg bg-gradient-to-r from-gray-800 to-black px-2 py-3"
  >
    <Icon name="ic:sharp-play-arrow" class="text-3xl" />
    <h3 class="text-lg">{plane.name}</h3>
  </div>
  <div class="max-w-md flex flex-col justify-between">
    {
      Object.entries(plane.stats).map(([key, value]) => (
        <div class="flex gap-2 bg-gradient-to-r from-gray-700 to-gray-800 justify-between p-2 border-b border-white">
          <p class="text-sm">{camelCaseToTitleCase(key)}:</p>
          <p class="text-sm text-right">{value}</p>
        </div>
      ))
    }
  </div>
</div>
