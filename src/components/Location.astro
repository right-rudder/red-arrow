const { bgColorRed = true } = Astro.props;
---

<section
  class={`flex flex-col-reverse items-center px-10 lg:flex-row bg-gradient-to-br ${bgColorRed ? "from-main-red to-red-900 text-white" : "from-white to-gray-200 text-black"} `}
