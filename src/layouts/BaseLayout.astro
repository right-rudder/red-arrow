---

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle, pageDescription, pageImage } = Astro.props;

---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} image={pageImage}/>
  </head>
  <body class="relative">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
